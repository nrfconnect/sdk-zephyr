	default y if !PSA_DEFAULT_OFF

config PSA_WANT_ALG_DETERMINISTIC_ECDSA
	bool
	prompt "PSA ECDSA support (deterministic mode)" if !PSA_PROMPTLESS
	default y if !PSA_DEFAULT_OFF

