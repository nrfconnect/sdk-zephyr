			interrupts = <29 IRQ_TYPE_LEVEL_LOW 3>;
			interrupt-parent = <&intc>;
			label = "I2C_2";

			status = "ok";
		};

		i2c3: i2c@9152e000 {
			compatible = "snps,designware-i2c";
