config BOARD_QEMU_X86
	bool "QEMU x86"
	depends on SOC_IA32
	select QEMU_TARGET
	select CPU_HAS_FPU
	select HAS_COVERAGE_SUPPORT

config BOARD_QEMU_X86_64
	bool "QEMU x86_64"
	depends on SOC_IA32
	select QEMU_TARGET
	select X86_NO_MELTDOWN # Until KPTI is enabled, allow testing
	select X86_64
