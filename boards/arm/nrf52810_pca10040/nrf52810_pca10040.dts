/dts-v1/;
#include <nordic/nrf52810.dtsi>

/ {
	model = "Nordic PCA10040 Dev Kit";
	compatible = "nordic,pca10040-dk", "nordic,nrf52810-qfaa",
		     "nordic,nrf52810";

	chosen {
		zephyr,console = &uart0;
#ifdef CONFIG_MCUMGR_SMP_UART
		zephyr,uart-mcumgr = &uart0;
#endif
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led@0 {
			gpios = <&gpio0 17 GPIO_INT_ACTIVE_LOW>;
			label = "Onboard GREEN LED 0";
		};
		led1: led@1 {
			gpios = <&gpio0 18 GPIO_INT_ACTIVE_LOW>;
			label = "Onboard GREEN LED 1";
		};
		led2: led@2 {
			gpios = <&gpio0 19 GPIO_INT_ACTIVE_LOW>;
			label = "Onboard GREEN LED 2";
		};
		led3: led@3 {
			gpios = <&gpio0 20 GPIO_INT_ACTIVE_LOW>;
			label = "Onboard GREEN LED 3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;
		user_button_0: button@0 {
			label = "Push button switch 0";
			gpios = <&gpio0 13 GPIO_PUD_PULL_UP>;
		};
		user_button_1: button@1 {
			label = "Push button switch 1";
			gpios = <&gpio0 14 GPIO_PUD_PULL_UP>;
		};
		user_button_2: button@2 {
			label = "Push button switch 2";
			gpios = <&gpio0 15 GPIO_PUD_PULL_UP>;
		};
		user_button_3: button@3 {
			label = "Push button switch 3";
			gpios = <&gpio0 16 GPIO_PUD_PULL_UP>;
		};
	};
};

&adc {
	status = "ok";
};

&gpiote {
	status ="ok";
};

&gpio0 {
	status ="ok";
};

&uart0 {
	status = "ok";
	current-speed = <115200>;
};

&i2c0 {
	status = "ok";
	sda-pin = <26>;
	scl-pin = <27>;
};

&spi0 {
	status = "ok";
	sck-pin = <29>;
	mosi-pin = <31>;
	miso-pin = <30>;
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0xd000>;
		};
		slot1_partition: partition@19000 {
			label = "image-1";
			reg = <0x00019000 0xd000>;
		};
		scratch_partition: partition@26000 {
			label = "image-scratch";
			reg = <0x00026000 0x3000>;
		};

#if defined(CONFIG_FS_FLASH_STORAGE_PARTITION)
		storage_partition: partition@29000 {
			label = "storage";
			reg = <0x00029000 0x00007000>;
		};
#endif
	};
};
