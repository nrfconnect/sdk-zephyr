/dts-v1/;
#include <nordic/nrf5340_cpuappns_qkaa.dtsi>
#include "bl5340_dvk_cpuapp_common.dtsi"

/ {
	model = "Laird Connectivity BL5340 (nRF5340) Application";
	compatible = "lairdconnectivity,bl5340-dvk-cpuapp";

	chosen {
		zephyr,sram = &sram0_ns;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_ns_partition;
	};

	/* Aliases for deleted nodes must be removed */
	aliases {
		/delete-property/ spi-flash0;
	};
};

zephyr_udc0: &usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
};

&qspi {
	status = "disabled";

	/* Drop the flash and partitions to avoid the config being used for DFU
	 * samples.
	 */
	/delete-node/ mx25r6435f@0;
};
