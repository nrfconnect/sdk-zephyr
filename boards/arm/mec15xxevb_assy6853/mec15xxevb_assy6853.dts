/dts-v1/;

#include <microchip/mec1501hsz.dtsi>

/ {
	model = "Microchip MEC15XXEVB_ASSY6853 evaluation board";
	compatible = "microchip,mec15xxevb_assy6853", "microchip,mec1501hsz";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart2;
		zephyr,flash = &flash0;
	};

	aliases {
		pwm-0 = &pwm0;
	};
};

&uart2 {
	status = "okay";
	current-speed = <115200>;
};

&adc0 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	port_sel = <1>;
};

&i2c1 {
	status = "okay";
	port_sel = <0>;
};

&i2c2 {
	status = "okay";
	port_sel = <7>;
};

&espi0 {
	status = "okay";
	io_girq = <19>;
	vw_girq = <24>;
	pc_girq = <15>;
};

&timer3 {
	status = "okay";
};

&ps2_0 {
	status = "okay";
};

&ps2_1 {
	status = "okay";
};

&pwm0 {
	status = "okay";
};

&kscan0 {
	status = "okay";
};

&spi0 {
	status = "okay";
	port_sel = <0>;
	chip_select = <0>;
	lines = <1>;
};
