CONFIG_SOC_SERIES_STM32U5X=y
CONFIG_SOC_STM32U585XX=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable hardware stack protection
CONFIG_HW_STACK_PROTECTION=y

# enable GPIO
CONFIG_GPIO=y

# Enable Clocks
CONFIG_CLOCK_CONTROL=y

# config USB and USB console
CONFIG_SERIAL=y
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y
CONFIG_UART_LINE_CTRL=y
CONFIG_UART_INTERRUPT_DRIVEN=y

# Comment out following USB config lines when
# switching console to UART
CONFIG_USB_DEVICE_STACK=y
CONFIG_USB_DEVICE_VID=0x0483
CONFIG_USB_DEVICE_PID=0x1235
CONFIG_USB_DEVICE_PRODUCT="Zephyr CDC SensorTile.box PRO"
CONFIG_USB_DEVICE_INITIALIZE_AT_BOOT=n

# enable pin controller
CONFIG_PINCTRL=y
