	bool "Port 1"
	help
	  Enable Port 1.

config GPIO_IMX_PORT_2
	bool "Port 2"
	help
	  Enable Port 2.

config GPIO_IMX_PORT_3
	bool "Port 3"
	help
	  Enable Port 3.

config GPIO_IMX_PORT_4
	bool "Port 4"
	help
	  Enable Port 4.

config GPIO_IMX_PORT_5
	bool "Port 5"
	help
	  Enable Port 5.

config GPIO_IMX_PORT_6
	bool "Port 6"
	help
	  Enable Port 6.

config GPIO_IMX_PORT_7
	bool "Port 7"
	help
	  Enable Port 7.

