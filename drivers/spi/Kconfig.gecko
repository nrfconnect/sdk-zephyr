config SPI_GECKO
	bool "Gecko SPI controller driver"
	default y
	depends on DT_HAS_SILABS_GECKO_SPI_USART_ENABLED
	depends on GPIO
	select SOC_GECKO_USART
	select CLOCK_CONTROL_SILABS_SERIES if SOC_FAMILY_SILABS_S2
	help
	  Enable the SPI peripherals on Gecko
