config SOC_FAMILY_STM32
	bool
	# omit prompt to signify a "hidden" option
	select HAS_SEGGER_RTT
	select BUILD_OUTPUT_HEX

if SOC_FAMILY_STM32

config SOC_FAMILY
	string
	default "st_stm32"

source "soc/arm/st_stm32/*/Kconfig.soc"

endif # SOC_FAMILY_STM32
