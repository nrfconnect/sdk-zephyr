source "share/sysbuild/Kconfig"

config NET_CORE_BOARD
	string
	default "nrf54h20dk/nrf54h20/cpurad" if "$(BOARD)" = "nrf54h20dk"
	default "nrf5340dk/nrf5340/cpunet" if "$(BOARD)" = "nrf5340dk"
	default "nrf5340_audio_dk/nrf5340/cpunet" if "$(BOARD)" = "nrf5340_audio_dk"
	default "nrf5340bsim/nrf5340/cpunet" if $(BOARD_TARGET_STRING) = "NRF5340BSIM_NRF5340_CPUAPP"

choice NET_CORE_IMAGE
	prompt "Network core image"
	default NET_CORE_IMAGE_HCI_IPC
	depends on NET_CORE_BOARD != ""

config NET_CORE_IMAGE_HCI_IPC
	bool "HCI IPC image on network core"

config NET_CORE_IMAGE_IPC_RADIO
	bool "Use ipc_radio application from sdk-nrf on network core"
	help
	  Use the ipc_radio application from sdk-nrf for the radio/network core
	  instead of the Zephyr hci_ipc sample.
	select NRF_DEFAULT_IPC_RADIO
	select NETCORE_IPC_RADIO_BT_HCI_IPC

endchoice
